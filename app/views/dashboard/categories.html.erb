 
<div class="bg-white overflow-hidden shadow-sm sm:rounded-lg my-5">
  <div class="p-6 text-gray-900">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <!--TABLA PRODUCTOS-->
    <div class="mb-8">
      <%= link_to 'Crear categorÃ­a' , new_category_path , class:'rounded-full bg-indigo-500 mb-8 p-3 text-white' %>
    </div>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead
                                class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3">
              Nombre
            </th>
            <th scope="col" class="px-6 py-3">
              Action
            </th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
              <th scope="row"
                                            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <%= category.name %>
              </th>
              <td class="px-6 py-4 flex">
                <%= link_to "Editar", edit_category_path(category),class:"px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white" %>
                <%= button_to 'Eliminar', category_path(category), method: :delete, class: "focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
