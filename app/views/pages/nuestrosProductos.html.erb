<div class="container max-w-screen-lg mx-auto px-5">
  <h2 class="text-5xl text-gray-900 dark:text-white text-center my-5">Nuestros Productos</h2>
  <!--flex flex-col columns-1 md:flex-row gap-2 md:columns-3 flex-wrap justify-between mb-5-->
  <div class="grid grid-cols-1 gap-4 md:grid-cols-4">
    <% @products.each do |product| %>
      <div
        class="product w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">

        <%= image_tag product.image , width:'200', heigth:"100", class:"rounded-t-lg img-productos" %>
        <div class="px-5 pb-5">
          <a href="#">
            <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
              <%= product.name %>
            </h5>
          </a>
          <div class="flex items-center justify-end">
            <span class="text-3xl font-bold text-gray-900 dark:text-white"><%= product.price %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
